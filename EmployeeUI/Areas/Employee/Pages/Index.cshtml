@page
@model EmployeeUI.Areas.Employee.Pages.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<div class="container mt-4">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Employees</li>
        </ol>
    </nav>

    <h1 class="mb-4">Employees</h1>

    <!-- Buttons -->
    <div class="mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-circle"></i> Create Employee
        </button>
        <button class="btn btn-primary" id="loadBtn">
            <i class="bi bi-arrow-repeat"></i> Load Employees
        </button>
    </div>

    <!-- Employee Table -->
    <table class="table table-striped" id="employeesTable">
        <thead>
            <tr>
                <th>Employee Number</th>
                <th>Full Name</th>
                <th>Date of Birth</th>
                <th>Daily Rate</th>
                <th>Working Days</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Filled via JS -->
        </tbody>
    </table>

    <!-- Take-Home Pay -->
    <div class="card mt-4 p-3">
        <h5>Compute Take-Home Pay</h5>
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Employee Number" id="thpEmployeeNumber">
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" id="thpStartDate">
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" id="thpEndDate">
            </div>
            <div class="col-md-3">
                <button class="btn btn-warning w-100" id="computeTHPBtn">
                    <i class="bi bi-cash-stack"></i> Compute
                </button>
            </div>
        </div>
    </div>

</div>

<!-- Create/Edit Modal (unchanged) -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName" required>
                    </div>
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" required>
                    </div>
                    <div class="mb-3">
                        <label for="middleName" class="form-label">Middle Name</label>
                        <input type="text" class="form-control" id="middleName">
                    </div>
                    <div class="mb-3">
                        <label for="dob" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="dob" required>
                    </div>
                    <div class="mb-3">
                        <label for="dailyRate" class="form-label">Daily Rate</label>
                        <input type="number" class="form-control" id="dailyRate" required>
                    </div>
                    <div class="mb-3">
                        <label for="workingDays" class="form-label">Working Days</label>
                        <select class="form-select" id="workingDays">
                            <option value="MWF">MWF</option>
                            <option value="TTHS">TTHS</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const apiUrl = "http://localhost:5129/api/employee";

    let originalSubmitHandler = null; // store POST handler

    // ================================
    // Load Employees
    // ================================
    async function loadEmployees() {
        const response = await fetch(apiUrl);
        const employees = await response.json();

        const tbody = document.querySelector("#employeesTable tbody");
        tbody.innerHTML = "";
        employees.forEach(emp => {
            tbody.innerHTML += `
            <tr>
                <td>${emp.employeeNumber}</td>
                <td>${emp.fullName}</td>
                <td>${new Date(emp.dateOfBirth).toLocaleDateString()}</td>
                <td>${emp.dailyRate}</td>
                <td>${emp.workingDays}</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="editEmployee('${emp.employeeNumber}')">Edit</button>
                    <button class="btn btn-danger btn-sm" onclick="deleteEmployee('${emp.employeeNumber}')">Delete</button>
                </td>
            </tr>`;
        });
    }

    document.getElementById("loadBtn").addEventListener("click", loadEmployees);

    // ================================
    // DELETE EMPLOYEE
    // ================================
    async function deleteEmployee(empNum) {
        if (!confirm(`Are you sure you want to delete ${empNum}?`)) return;

        const res = await fetch(`${apiUrl}/${empNum}`, { method: "DELETE" });
        if (res.ok) {
            alert("Employee deleted!");
            loadEmployees();
        } else {
            alert("Error deleting employee");
        }
    }

    // ================================
    // EDIT EMPLOYEE
    // ================================
    async function editEmployee(empNum) {
        const res = await fetch(`${apiUrl}/${empNum}`);
        if (!res.ok) { alert("Error loading employee"); return; }

        const emp = await res.json();
        const { lastName, firstName, middleName } = splitFullName(emp.fullName);
        // Prefill modal
        document.getElementById("lastName").value = lastName;
        document.getElementById("firstName").value = firstName;
        document.getElementById("middleName").value = middleName;
        document.getElementById("dob").value = emp.dateOfBirth.split('T')[0];
        document.getElementById("dailyRate").value = emp.dailyRate;
        document.getElementById("workingDays").value = emp.workingDays;

        // Change modal title
        document.getElementById("createModalLabel").innerText = "Edit Employee";

        // Show modal
        const modalEl = document.getElementById('createModal');
        const modal = new bootstrap.Modal(modalEl);
        modal.show();

        // Save original handler only once
        if (!originalSubmitHandler) {
            originalSubmitHandler = document.getElementById("employeeForm").onsubmit;
        }

        // Override handler with PUT update
        document.getElementById("employeeForm").onsubmit = async e => {
            e.preventDefault();

            const updatedEmployee = {
                lastName: document.getElementById("lastName").value,
                firstName: document.getElementById("firstName").value,
                middleName: document.getElementById("middleName").value,
                dateOfBirth: document.getElementById("dob").value,
                dailyRate: parseFloat(document.getElementById("dailyRate").value),
                workingDays: document.getElementById("workingDays").value
            };

            const putRes = await fetch(`${apiUrl}/${empNum}`, {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(updatedEmployee)
            });

            if (putRes.ok) {
                alert("Employee updated!");
                loadEmployees();
                modal.hide();

                // restore POST handler
                document.getElementById("employeeForm").onsubmit = originalSubmitHandler;
            } else {
                alert("Error updating employee");
            }
        };
    }

    // ================================
    // CREATE EMPLOYEE (POST)
    // ================================
    document.getElementById("employeeForm").onsubmit = async e => {
        e.preventDefault();

        const employee = {
            lastName: document.getElementById("lastName").value,
            firstName: document.getElementById("firstName").value,
            middleName: document.getElementById("middleName").value,
            dateOfBirth: document.getElementById("dob").value,
            dailyRate: parseFloat(document.getElementById("dailyRate").value),
            workingDays: document.getElementById("workingDays").value
        };

        const res = await fetch(apiUrl, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(employee)
        });

        if (res.ok) {
            alert("Employee created!");
            loadEmployees();
            const modalEl = document.getElementById('createModal');
            bootstrap.Modal.getInstance(modalEl).hide();
        } else {
            alert("Error creating employee");
        }
    };

    function splitFullName(fullName) {
        // Split into ["LastName", "FirstName MiddleName"]
        const parts = fullName.split(",");

        const lastName = parts[0].trim();
        const rest = parts[1]?.trim() ?? "";

        // Split remaining parts (can be 1 or 2 names)
        const restParts = rest.split(" ");

        const firstName = restParts[0] ?? "";
        const middleName = restParts.slice(1).join(" ") ?? "";

        return { lastName, firstName, middleName };
    }

    // ================================
    // TAKE-HOME PAY
    // ================================
    document.getElementById("computeTHPBtn").addEventListener("click", async () => {
        const empNum = document.getElementById("thpEmployeeNumber").value;
        const start = document.getElementById("thpStartDate").value;
        const end = document.getElementById("thpEndDate").value;

        if (!empNum || !start || !end) {
            alert("Please complete all fields.");
            return;
        }

        const res = await fetch(`${apiUrl}/${empNum}/takehome?start=${start}&end=${end}`);
        if (res.ok) {
            const data = await res.json();
            alert(`Take-Home Pay for ${empNum}: PhP ${data.takeHomePay.toLocaleString()}`);
        } else {
            alert("Error computing take-home pay");
        }
    });
</script>
